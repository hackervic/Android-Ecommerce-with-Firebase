<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ContactUsActivity">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="640dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="55dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:src="@drawable/support" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Are Our Most unhappy customers And You Our greatest source of learning."
            android:textAlignment="center"
            android:textColor="#eeb70c"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="WE ARE 24*7 AVALIBLE FOR YOU"
            android:textAlignment="center"
            android:textColor="#4f39db"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/email" />

            <Button
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/inputs_design"
                android:backgroundTint="#eeb70c"
                android:text="@string/email_us"
                android:textColor="#fff"
android:id="@+id/email_us"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/conver" />

            <Button
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/inputs_design"
                android:id="@+id/message_us"
                android:backgroundTint="#3b8d41"
                android:text="@string/message_us"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/phon" />

            <Button
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/inputs_design"
                android:backgroundTint="#ec1641"
                android:text="@string/contact_us"
                android:textColor="#fff"
                android:id="@+id/contact_us"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
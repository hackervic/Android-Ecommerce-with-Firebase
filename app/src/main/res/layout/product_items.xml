<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/inputs_design"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_of_product"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            />

        <ImageView
            android:id="@+id/image_of_product"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_below="@+id/name_of_product"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:scaleType="fitCenter" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_of_product"
            android:id="@+id/price_of_product"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/price_product"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_of_product"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="@string/description_product"
            android:textColor="#000"
            android:layout_below="@+id/price_of_product"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>